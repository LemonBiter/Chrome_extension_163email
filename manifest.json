{
  "name": "163 email autoLoin",
  "version": "1.0.0",
  "description": "自动登陆你的163邮箱。",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://dl.reg.163.com/*"
      ],
      "all_frames": true,
      "js": [
        "iframe.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "popup/icon.png",
    "48": "popup/icon.png",
    "128": "popup/icon.png"
  },
  "browser_action": {
    "default_title": "163 Login page",
    "default_icon": "popup/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}